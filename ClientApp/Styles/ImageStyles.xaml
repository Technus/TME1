<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="PaddedMenuIcon" TargetType="Image">
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Width" Value="{StaticResource IconSize}" />
    <Setter Property="Height" Value="{StaticResource IconSize}" />
    <Setter Property="Margin" Value="{StaticResource HorizontalMargin}" />
  </Style>

  <Style x:Key="PaddedMiscIcon" TargetType="Image">
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Width" Value="{StaticResource IconSize}" />
    <Setter Property="Height" Value="{StaticResource IconSize}" />
    <Setter Property="Margin" Value="{StaticResource StandardMargin}" />
  </Style>

  <Style x:Key="LargeIcon" TargetType="Image">
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="MaxWidth" Value="48" />
    <Setter Property="MaxHeight" Value="48" />
    <Setter Property="Margin" Value="{StaticResource StandardMargin}" />
  </Style>
</ResourceDictionary>